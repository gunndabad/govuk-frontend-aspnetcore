<details {%- if params.id %} id="{{ params.id }}"{% endif %} class="govuk-details {%- if params.classes %} {{ params.classes }}{% endif %}"
  {{- params.attributes -}}
  {%- if params.open %} open{% endif %}>
  <summary class="govuk-details__summary">
    <span class="govuk-details__summary-text">
      {% if params.summaryHtml %}{{ params.summaryHtml | strip | indent: 6 | raw }}{% else %}{{ params.summaryText }}{% endif %}
    </span>
  </summary>
  <div class="govuk-details__text">
    {% if params.html %}{{ params.html }}{% else %}{{ params.text }}{% endif %}
  </div>
</details>
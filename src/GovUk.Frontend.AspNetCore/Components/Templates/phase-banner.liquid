{% from "tag.macro" import govukTag %}

<div class="govuk-phase-banner
  {%- if params.classes %} {{ params.classes }}{% endif %}"
  {{- govukAttributes(params.attributes) }}>
  <p class="govuk-phase-banner__content">
    {{ govukTag(dict(
      text = params.tag.text,
      html = params.tag.html,
      classes = ("govuk-phase-banner__content__tag" | append: (" " | append: params.tag.classes | rstrip))
    )) | strip | indent: 4 }}
    <span class="govuk-phase-banner__text">
      {{ params.html | raw | strip | indent: 6 | default: params.text }}
    </span>
  </p>
</div>
<details {%- if params.id %} id="{{ params.id }}"{% endif %} class="govuk-details {%- if params.classes %} {{ params.classes }}{% endif %}"
  {{- govukAttributes(params.attributes) -}}
  {{- ifelse(params.open, " open", "") }}>
  <summary class="govuk-details__summary">
    <span class="govuk-details__summary-text">
      {{ params.summaryHtml | raw | strip | indent: 6 | default: params.summaryText }}
    </span>
  </summary>
  <div class="govuk-details__text">
    {{ params.html | raw | default: params.text }}
  </div>
</details>